div.qbo-step-header
  display: flex
  flex-direction: row
  align-items: stretch
  margin: 30px 0
  margin-top: 50px
  div.bar
    flex: 1
    position: relative
    &:after
      position: absolute
      content: ''
      left: 0
      top: 0
      height: 50%
      width: 100%
      border-bottom: 2px solid #d4d7dc
    &.pre
      margin-right: 20px
    &.post
      margin-left: 20px

  h2
    flex: 1
    margin: 0
    flex-grow: 0
    white-space: nowrap
    line-height: 1em

    $number-size: 28px
    span.number
      display: inline-block
      width: $number-size
      height: $number-size
      border: 2px solid #d4d7dc
      color: #ccc
      border-radius: 50%
      text-align: center
      vertical-align: text-bottom
      margin-right: 10px
      font-size: 14px
      line-height: $number-size
      font-family: $normal-font-families
      box-sizing: border-box
      font-weight: 600
