tile-margins = 20px

div.qbo-feature-tile
  align-items: center
  display: flex
  flex-direction: column

  div.qbo-feature-tile-icon
    height: 120px
    margin-bottom: tile-margins
    img
      max-width: 100%
      max-height: 100%
  div.qbo-feature-tile-content
    display: flex
    flex-direction: column
    min-width: 0
    h3
      font-weight: 500
      font-family: normal-font-families
      margin-bottom: 5px

div.qbo-feature-tileset
  width: 100%
  display: flex
  flex-direction: row
  flex-wrap: wrap
  margin: 0 (-tile-margins)
  div.qbo-feature-tile
    text-align: left
    flex: 1
    min-width: 280px
    margin: tile-margins
    display: flex
    flex-direction: row
    div.qbo-feature-tile-icon
      margin-right: tile-margins
      margin-bottom: 0
      height: auto
      flex-basis: 50px
      img
        width: 100%
    div.qbo-feature-tile-content
      flex: 1
